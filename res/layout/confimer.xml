<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_confirmer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/background_dark"
    android:orientation="vertical"
    android:paddingTop="5dp" >
    
     <TextView
         android:id="@+id/confirmer"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:gravity="center"
         android:text="Confirmer la commande ?"
         android:textColor="#ffffff"
         android:textSize="20dp"
         android:typeface="normal" />
     
     <TextView
        android:id="@+id/empte"
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:layout_gravity="center_horizontal" >
    </TextView>

     <TableRow
         android:id="@+id/tableRow1"
         android:layout_width="match_parent"
         android:layout_height="wrap_content" >       
         
         <TextView
             android:id="@+id/empty1"
             android:layout_width="0dp"
             android:layout_weight="0.1"
             android:layout_height="match_parent"
             android:text="        "
             android:textColor="#ffffff" />
         
         <Button
             android:id="@+id/non"
             android:background="@drawable/background_button_small"
             android:layout_width="0dp"
             android:layout_weight="0.35"
             android:layout_height="match_parent"
             android:onClick="confirmationNon"
             android:text="Non" />

         <TextView
             android:id="@+id/empty2"
             android:layout_width="0dp"
             android:layout_weight="0.1"
             android:layout_height="match_parent"
             android:text="      "
             android:textColor="#ffffff" />
         
         <Button
             android:id="@+id/oui"
             android:background="@drawable/background_button_small"
             android:layout_width="0dp"
             android:layout_weight="0.35"
             android:layout_height="match_parent"
             android:onClick="confirmationOui"
             android:text="Oui" />
         
          <TextView
             android:id="@+id/empty2"
             android:layout_width="0dp"
             android:layout_weight="0.1"
             android:layout_height="match_parent"
             android:text="      "
             android:textColor="#ffffff" />
         

     </TableRow>

</LinearLayout>