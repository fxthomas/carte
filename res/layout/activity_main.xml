<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:weightSum="1.0" >

        <ScrollView
            android:id="@+id/frame_left"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.3"
            android:background="@drawable/background_dark" >

            <fragment
                android:id="@+id/fragment_left"
                android:name="com.example.carte.LeftWelcomeFragment"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:layout="@layout/frag_left_welcome" />
        </ScrollView>

        <LinearLayout
            android:id="@+id/frame_right"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.7"
            android:background="@drawable/background_light"
            android:orientation="vertical" >

            <fragment
                android:id="@+id/fragment1"
                android:name="com.example.carte.RightWelcomeFragment"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:layout="@layout/frag_right_welcome" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>